<div class="page-header">
  <h1>
    Receipts
    <a href="/receipts/new" class="btn btn-lg btn-success">New Receipt</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Event</th>
        <th>Payer</th>
        <th>Receipt img</th>
        <th>Actions</th>
      </tr>

      <% @receipts.each do |receipt| %>
      <tr>
        <td><%= receipt.event.created_at %></td>
        <td><%= receipt.payer.email %></td>
        <td><img src='<%= receipt.receipt_img %>' class='img-responsive'></td>
        <td>
          <a href="/receipts/<%= receipt.id %>" class="btn btn-primary">Show</a>
          <a href="/receipts/<%= receipt.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_receipt/<%= receipt.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
