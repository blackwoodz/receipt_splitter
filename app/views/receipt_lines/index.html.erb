<div class="page-header">
  <h1>
    Receipt lines
    <a href="/receipt_lines/new" class="btn btn-lg btn-success">New Receipt line</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Claimer</th>
        <th>Description</th>
        <th>Line value</th>
        <th>Receipt</th>
        <th>Actions</th>
      </tr>

      <% @receipt_lines.each do |receipt_line| %>
      <tr>
        <td><%= receipt_line.claimer.event_id %></td>
        <td><%= receipt_line.description %></td>
        <td><%= receipt_line.line_value %></td>
        <td><%= receipt_line.receipt_id %></td>
        <td>
          <a href="/receipt_lines/<%= receipt_line.id %>" class="btn btn-primary">Show</a>
          <a href="/receipt_lines/<%= receipt_line.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_receipt_line/<%= receipt_line.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
