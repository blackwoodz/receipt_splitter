<div class="page-header">
  <h1>
    Attendances
    <a href="/attendances/new" class="btn btn-lg btn-success">New Attendance</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Event</th>
        <th>Attendee</th>
        <th>Actions</th>
      </tr>

      <% @attendances.each do |attendance| %>
      <tr>
        <td><%= attendance.event.created_at %></td>
        <td><%= attendance.attendee.email %></td>
        <td>
          <a href="/attendances/<%= attendance.id %>" class="btn btn-primary">Show</a>
          <a href="/attendances/<%= attendance.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_attendance/<%= attendance.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
